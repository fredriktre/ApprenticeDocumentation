---
// Image imports
import Logo from '/icons/logo.svg'

// Data imports
import indexNavData from '../../data/indexNavData';

// Props

---

<nav>

    <a class="logo" href="#">
        <img src={Logo} />
    </a>

    <div class="menu-wrapper">
        <ul id="menu">
            {
                indexNavData.map(path => (
                    <li id={path.name}><a href={path.path}><img src={path.icon} /><span class="link-text">{path.name}</span></a></li>
                ))
            }
        </ul>
        <button id="menu-btn">
            <span></span>
            <span></span>
            <span></span>
        </button>
    </div>
    
</nav>

<style>

    nav {
        position: fixed;
        top: 0;
        left: 0;
        z-index: 10;

        display: flex;
        justify-content: space-between;
        align-items: center;

        width: calc(100% - 4rem);
        height: 4rem;

        padding: 0 2rem;

        background-color: black;
    }

    .logo {
        position: relative;
        z-index: 6;
        width: 2rem;
        height: 2rem;
    }

    .logo img {
        width: inherit;
        height: inherit;

        transition: 0.1s linear;
        animation-name: logoRotate;
        animation-timing-function: linear;
        animation-duration: 2s;
        animation-fill-mode: forwards;
        animation-play-state: paused;
        animation-iteration-count: infinite;
    }

    .logo:hover img {
        scale: 1.2;
        animation-play-state: running;
    }

    @keyframes logoRotate {
        from {
            transform: rotateZ(0deg);
        }
        to {
            transform: rotateZ(360deg);
        }
    }
    
    .logo:active img {
        scale: 0.8;
    }

    .menu-wrapper {
        position: relative;
        display: flex;
        align-items: center;
        gap: 1rem;
    }

    #menu-btn {
        position: relative;
        z-index: 6;
    }

    ul {
        position: relative;
        z-index: 5;

        display: flex;
        justify-content: center;
        align-items: center;
        flex-direction: row;
        gap: 1rem;

        padding: 0;
        margin: 0;
        transition: 0.4s ease-in-out;
    }

    ul li {
        list-style: none;
    }

    ul li a {
        width: 2rem;
        height: 2rem;
        text-decoration: none;
    }

    ul li a img {
        width: inherit;
        height: inherit;

        transition: 0.1s linear;
    }

    ul li a:hover img {
        scale: 1.2;
    }

    ul li a:active img {
        scale: 0.8;
    }

    button {
        position: relative;
        display: none;

        width: 2.5rem;
        height: 2.5rem;
    
        background: transparent;
        cursor: pointer;
        outline: none;
        border: unset;
    }

    button span {
        display: block;
        width: 100%;
        height: 0.3rem;
        margin: 5px auto;
        background-color: white;
        transition: 0.2s;
    }

    .link-text {
        display: none;

        margin-left: 0.5rem;

        color: #ffffff;
        font-size: 1.5rem
    }

    @media (max-width: 768px) {
        
        ul {
            position: fixed;
            top: -100%; left: 0;
            z-index: 5;

            display: flex;
            justify-content: center;
            align-items: center;
            flex-direction: column;
            gap: 1rem;

            width: 100%;
            height: calc(100% - 4rem);

            margin-top: 4rem;

            background-color: black;
        }

        ul.active {
            top: 0;
        }

        .link-text.active {
            display: inline;
        }

        button {
            display: block
        }

        button.active span:nth-child(1) {
            transform: translateY(0.6rem) rotateZ(45deg);
        }

        button.active span:nth-child(2) {
            opacity: 0;
        }

        button.active span:nth-child(3) {
            transform: translateY(-0.6rem) rotateZ(-45deg);
        }
    }

</style>

<script>
    const button = document.getElementById("menu-btn");
    const menu = document.getElementById("menu");
    const links = document.querySelectorAll(".link-text")
    
    window.addEventListener("resize", () => {
        let windowSize = window.innerWidth;
        
        if (windowSize > 768) {
            button.classList.remove("active")
            menu.classList.remove("active")
            links.forEach(link => {
                link.classList.remove("active");
            })
        }
    })

    button.addEventListener("pointerdown", () => {
        if (button.classList.contains("active")) {
            button.classList.remove("active")
            menu.classList.remove("active")
            links.forEach(link => {
                link.classList.remove("active");
            })
        } else {
            button.classList.add("active")
            menu.classList.add("active")
            links.forEach(link => {
                link.classList.add("active");
            })
        }
    })

</script>