---

interface Props {
    Header:string;
    URL:string;
    Author?:string;
    width:string;
    height:string;
}

const { Header, URL, Author, width, height } = Astro.props as Props

---

<div class="wrapper">
    <img src={ URL } />
    <div class="text-wrapper">
        <h4>{ Header }</h4>
        {
             Author != null &&
             <div>
                 <p>{ Author }</p>
             </div>
        }
    </div>
</div>

<style define:vars={{width, height}}>
    .wrapper {
        width: var(--width);
        height: var(--height);
        background-color: #3B3B3B;
        border-radius: 1rem;
        overflow: hidden;
        color: #fff;
    }

    div img {
        width: 100%;
        max-height: 70%;
        object-fit: cover;
    }

    .text-wrapper {
        width: 100%;
        height: 100%;
        padding: 1rem;
    }

    .text-wrapper>h4 {
        font-size: 1.5rem;
        margin: 0 0 0.5rem 0;
    }

    .text-wrapper>div>p {
        margin: 0;
    }
</style>