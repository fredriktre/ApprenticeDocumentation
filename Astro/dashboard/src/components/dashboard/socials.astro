---

const friends = [
    {
        name: "Jared Nickelback",
        uid: "pajdj102979jaod",
        icon: "/assets/icons/logo.svg"
    },
   
]

---


<div class="socials-wrapper">
    <div class="header">
        <h1>Colleague</h1>
        <div class="input-wrapper">
            <button>+</button>
            <button>...</button>
        </div>
    </div>

    <div class="search">
        <input type="text" placeholder="Search" />
        <button><img src="/assets/icons/search.svg"/></button>
    </div>

    <div class="menu">

        <ul class="friendslist">
           {friends.map(friend =>(
                <li>
                    <a href="#">
                        <img src={friend.icon} />
                        <div>
                            <span class="name">{friend.name}</span>
                            <span class="message" id={friend.uid}>Latest message</span>
                        </div>
                    </a>
                </li>
            ))}
        </ul>
    </div>
</div>

<style>
    .socials-wrapper {
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 1rem;

        width: 10rem;
        height: calc(100% - 2rem);

        padding: 1rem 1rem;

        background-color: black;
        color: #ffffff;
    }

    .header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        
        width: 100%;
    }

    .header h1 {
        font-size: 1rem;
        margin: 0;
    }

    .header .input-wrapper {
        display: flex;
        justify-content: center;
        align-items: center;
        gap: 0.2rem
    }

    .header .input-wrapper button {
        display: flex;
        justify-content: center;
        align-items: center;

        width: 1rem;
        height: 1rem;
        font-size: 0.5rem;

        color: #ffffff;
        background-color: transparent;
        border: unset;
        outline: unset;
    }

    .search {
        display: flex;

        width: calc(100% - 0.4rem);
        height: 1rem;

        padding: 0.2rem 0.2rem;
        border: 0.1rem solid #222222;
        border-radius: 0.5rem;
    }

    .search input {
        width: 100%;
        height: 1rem;
        border: unset;
        outline: unset;
        font-size: 0.5rem;
        background-color: transparent;
        color: #ffffff
    }

    .search button {
        display: flex;
        justify-content: center;
        align-items: center;

        width: 1rem;
        height: 1rem;

        padding: 0.5rem;
        margin: 0;
        border: unset;
        outline: unset;

        background-color: transparent;

    }

    .search button img {
        width: 1rem;
    }

    .menu {
        width: calc(100% - 1rem);
        height: 100%;
        padding: 0 0.5rem;
        overflow: hidden;
        overflow-y: auto;
    }

    .menu::-webkit-scrollbar {
        width: 0.2rem;
    }
    .menu::-webkit-scrollbar-track {
        background-color: #222222;
    }
    .menu::-webkit-scrollbar-thumb {
        background-color: #666666;
        border-radius: 0.5rem;
    }

    .friendslist {
        display: flex;
        flex-direction: column;
        gap: 1rem;

        width: 100%;

        padding: 0;
        margin: 0;
    }

    .friendslist li {
        display: flex;
        justify-content: center;
        align-items: center;
        width: 100%;
        list-style: none;
    }

    .friendslist li a {
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 0.5rem;

        width: 100%;
        height: 100%;

        border-radius: 0.5rem;
        padding: 0.3rem 0;

        background-color: #222222;
        text-decoration: none;
    }
    
    .friendslist li a img {
        width: 1rem;
        height: 1rem;
    }
    
    .friendslist li a div {
        display: flex;
        flex-direction: column;
        color: #ffffff
    }

    .friendslist li a div .name {
        font-size: 0.5rem;
        height: 0.5rem;
        white-space: nowrap;
    }

    .friendslist li a div .message {
        font-size: 0.3rem
    }
</style>