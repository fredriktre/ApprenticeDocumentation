---
import routeData from "../../data/routeData";
---


<nav>
    <ul>
       {routeData.map(route =>(
            <li>
                <a href={route.path} id={route.name}>
                    <img src={route.icon} />
                </a>
            </li>
        ))}
    </ul>
</nav>

<style>
    nav {
        display: flex;
        flex-direction: column;
        align-items: center;

        width: 4rem;
        height: calc(100% - 2rem);

        padding: 1rem 0;

        background-color: black;
    }

    nav ul {
        padding: 0;
        margin: 0;
    }

    nav ul li {
        width: 2rem;
        height: 2rem;

        list-style: none;
    }

    nav ul li a {
        width: 100%;
        height: 100%;
    }

    nav ul li a img {
        width: inherit;
        height: inherit;
    }
</style>